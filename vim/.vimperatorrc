" Replace numbers as default
set hintchars=hjklasdfgyuiopqwertnmzxcvb

"Mininal look
set gui=nonavigation
"set tabnumbers

" don't always focus the content
set nofocuscontent

" title shouldn't be Vimperator
set titlestring=""

" keep messages around for 2 seconds
set messagetimeout=2000

" title shouldn't be Vimperator
set titlestring=""

" scroll three times as fast: i operate at warp speed
nnoremap j 3j
nnoremap k 3k
"nnoremap h 3h
"nnoremap l 3l

" make some shortcuts more like Vimium
nnoremap h gT
nnoremap l gt

"More like vim
"nnoremap dd d

" Select what shows when choose o or t
" s=search engines, b=bookmarks
set complete=sb

"set popups=tab,resized

set incsearch
set ignorecase
" Overside ignorecase if pattern has upper case
set smartcase

" Open hints in new tab by default (switch roles of f and F)
"noremap f F
"noremap F f

" Resize link hints
":highlight Hint font:"DejaVu Sans Mono";font-size:120%;color:red;background-color:yellow;padding:2px;
:highlight Hint -append font-size:14px;

"autocmd LocationChange .*                             js modes.passAllKeys = false
"autocmd LocationChange mail\\.google\\.com            js modes.passAllKeys = true
"autocmd LocationChange www\\.youtube\\.com/watch    js modes.passAllKeys = true

" remap quicklink to q from go
" macros were using this but I'm not using
nnoremap q go
nnoremap Q gn

"nnoremap <A-Space> <PageUp>
nnoremap b <PageUp>

nnoremap gd  <C-S-y>

nnoremap sg  :set gui=navigation<CR>
nnoremap hg  :set gui=nonavigation<CR>

